---
import logo from "../images/logo.webp";
---

<header>
  <div class="wrapper">
    <div class="icons-wrapper">
      <div class="logo"><img src={logo} alt="" /></div>
      <ul class="icons">
        <li>
          <a href=""
            ><i class="fa-solid fa-truck"></i><span class="desktop-breakpoint"
              >Dostawa</span
            >
          </a>
        </li>
        <li>
          <a href=""
            ><i class="fa-solid fa-cart-shopping"></i><span
              class="desktop-breakpoint">Koszyk</span
            >
          </a>
        </li>
        <li>
          <a href=""
            ><i class="fa-regular fa-user"></i><span class="desktop-breakpoint"
              >Profil</span
            >
          </a>
        </li>
        <li class="mobile-button">
          <button class="menu-btn"><i class="fa-solid fa-bars"></i></button>
        </li>
      </ul>
    </div>

    <div class="search-bar">
      <input placeholder="Szukaj produktów" type="search" />
      <button type="submit"
        ><i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </div>

    <nav>
      <div class="mobile-navigation">
        <ul>
          <li><a href="/produkty">Produkty</a></li>
          <li><a href="/promocje">Promocje</a></li>
          <li><a href="/how-to-buy">Jak kupować?</a></li>
          <li><a href="/regulamin">Regulamin</a></li>
          <li><a href="/formularz-kontaktowy">Formularz kontaktowy</a></li>
          <li><a href="/faq">FAQ</a></li>
        </ul>
      </div>
      <div class="desktop-navigation">
        <ul>
          <li><a href="">Produkty</a></li>
          <li><a href="">Promocje</a></li>
          <li><a href="">Jak kupować?</a></li>
          <li><a href="">Regulamin</a></li>
          <li><a href="">Formularz kontaktowy</a></li>
          <li><a href="">FAQ</a></li>
          <li class="search-bar-desktop">
            <input placeholder="Szukaj produktów" type="search" />
            <button type="submit"
              ><i class="fa-solid fa-magnifying-glass"></i>
            </button>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</header>

<style>
  /* Header */

  .wrapper {
    padding: 16px 32px;
    position: relative;
    z-index: 10000;
  }
  .icons-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    position: relative;
    z-index: 200000;
  }
  .icons {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0.75rem;
  }
  .icons li button {
    background-color: transparent;
    border: 0;
  }
  .icons i {
    color: black;
  }
  .logo img {
    width: 80px;
  }
  .search-bar {
    margin-top: 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid black;
    justify-content: space-between;
    border-radius: 99vh;
    padding-inline: 1rem;
    margin-inline: 1rem;
  }
  .search-bar input {
    border: 0;
    outline: 0;
    font-size: 12px;
    width: 80%;
  }
  .search-bar button {
    border: 0;
    outline: 0;
    background-color: transparent;
  }

  /* Navigation Mobile*/
  .mobile-navigation {
    display: none;
  }
  .mobile-navigation ul {
    list-style: none;
    text-transform: uppercase;
    text-decoration: none;
    color: black;
  }
  .mobile-navigation ul li {
    text-decoration: none;
    color: black;
    padding: 0.5rem;
  }
  .mobile-navigation ul li a {
    text-decoration: none;
    color: black;
  }

  .mobile-navigation.active {
    display: block;
    height: 100vh;
    position: absolute;
    background-color: white;
    left: 0;
    top: 0;
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  @media screen and (min-width: 650px) {
    .wrapper {
      margin: 0 auto;
      max-width: 650px;
      position: relative;
      z-index: 10000;
    }
  }

  @media screen and (min-width: 1100px) {
    .wrapper {
      margin: 0 auto;
      padding: 16px 32px;
      max-width: 1100px;
      position: relative;
      z-index: 10000;
    }
    .icons-wrapper {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .icons {
      display: flex;
      list-style: none;
      margin: 0;
      padding: 0;
      gap: 0.75rem;
    }

    .icons li button {
      background-color: transparent;
      border: 0;
    }
    .icons li .desktop-breakpoint {
      padding-left: 0.5rem;
    }
    .icons li a {
      text-decoration: none;
      color: black;
    }
    .icons i {
      color: black;
      font-size: 24px;
    }
    .logo img {
      width: 70%;
    }
    .mobile-navigation {
      display: none;
    }
    .mobile-navigation.active {
      display: none;
    }
    .mobile-button {
      display: none;
    }
    .search-bar {
      display: none;
    }
  }
  /* Navigation Desktop */
  .desktop-navigation {
    margin-top: 2rem;
  }
  .desktop-navigation ul {
    display: flex;
    margin: 0;
    padding: 0;
    text-transform: uppercase;
    align-items: center;
    list-style: none;
    gap: 1.5rem;
  }
  .desktop-navigation ul li a {
    text-decoration: none;
    color: black;
  }
  .search-bar-desktop {
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid black;
    justify-content: space-between;
    border-radius: 99vh;
    padding-inline: 1rem;

    margin-left: auto;
  }
  .search-bar-desktop input {
    border: 0;
    outline: 0;
    font-size: 12px;
    width: 80%;
  }
  .search-bar-desktop button {
    border: 0;
    outline: 0;
    background-color: transparent;
  }
  @media screen and (max-width: 1100px) {
    .desktop-navigation {
      display: none;
    }
    .desktop-breakpoint {
      display: none;
    }
  }
</style>

<script>
  const menuBtn = document.querySelector(".menu-btn");
  const menuMobile = document.querySelector(".mobile-navigation");

  let menuOpen = false;
  menuBtn.addEventListener("click", () => {
    if (!menuOpen) {
      menuBtn.classList.add("active");
      menuOpen = true;
    } else {
      menuBtn.classList.remove("active");
      menuOpen = false;
    }
  });
  menuBtn.addEventListener("click", () => {
    menuMobile.classList.toggle("active");
  });
</script>
